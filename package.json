{
  "name": "relizy",
  "type": "module",
  "version": "0.2.5-beta.5",
  "packageManager": "pnpm@10.22.0",
  "description": "Changelogen adapter for monorepo management with unified and independent versioning",
  "author": "Louis Mazel <me@loicmazuel.com>",
  "license": "MIT",
  "homepage": "https://louismazel.github.io/relizy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/relizy.git"
  },
  "bugs": "https://github.com/LouisMazel/relizy/issues",
  "keywords": [
    "changelogen",
    "monorepo",
    "changelog",
    "release",
    "versioning",
    "lerna",
    "semantic-release",
    "conventional-commits",
    "turbo",
    "git-tag",
    "npm-publish",
    "version-bump",
    "changesets",
    "release-automation"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./cli": "./bin/relizy.mjs",
    "./types": "./dist/index.d.ts"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "relizy": "./bin/relizy.mjs",
    "rly": "./bin/relizy.mjs"
  },
  "files": [
    "LICENSE",
    "README.md",
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx husky",
    "build": "unbuild",
    "dev": "unbuild --stub",
    "relizy": "node bin/relizy.mjs",
    "rly": "node bin/relizy.mjs",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "cross-env NODE_ENV=production eslint .",
    "lint:fix": "pnpm lint --fix",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:unit:coverage": "vitest run --coverage",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.10.1",
    "@maz-ui/node": "^4.3.1-alpha.0",
    "@maz-ui/utils": "^4.3.0",
    "c12": "^3.3.2",
    "changelogen": "^0.6.2",
    "commander": "^14.0.2",
    "convert-gitmoji": "^0.1.5",
    "defu": "^6.1.4",
    "fast-glob": "^3.3.2",
    "node-fetch-native": "^1.6.7",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@commitlint/types": "^20.0.0",
    "@maz-ui/eslint-config": "4.3.1-alpha.2",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "memfs": "^4.51.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,md,yml,json}": [
      "eslint --fix"
    ]
  }
}
